			"name": "Login Session",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Get Token\", function () {",
							"    var jsonData = pm.response.json();",
							"    var access_token = jsonData.uat.access_token;",
							"    pm.collectionVariables.set(\"token\", access_token);",
							"    console.log(\"token: \" + access_token);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"request": {
				"method": "POST",
				"header": [
					{
						"key": "Content-Type",
						"value": "application/json",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": "{\n  \"email_id\": \"api_murcia@vodafone.com\",\n  \"password\": \"Murcia@123\"\n}"
				},
				"url": {
					"raw": "https://{{base_uri}}/api/ndac/v2/login-session",
					"protocol": "https",
					"host": [
						"{{base_uri}}"
					],
