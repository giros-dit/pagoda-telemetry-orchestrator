			"name": "List all active SIMS associated with an access point",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Get ICC-ID\", function () {",
							"    var jsonData = pm.response.json();",
							"    var icc_id = jsonData.access_point_imsi_details[0].imsi_details[0].icc_id;",
							"    pm.collectionVariables.set(\"icc_id\", icc_id);",
							"    console.log(\"ICC-ID: \" + icc_id);",
							"});"
						],
						"type": "text/javascript"
					}
				}
			],
			"protocolProfileBehavior": {
				"disableBodyPruning": true
			},
			"request": {
				"method": "GET",
				"header": [
					{
						"key": "Accept",
						"value": "application/json",
						"type": "text"
					},
					{
						"warning": "This is a duplicate header and will be overridden by the Authorization header generated by Postman.",
						"key": "Authorization",
						"value": "{{token}}",
						"type": "text"
					}
				],
				"body": {
					"mode": "raw",
					"raw": ""
				},
				"url": {
					"raw": "https://{{base_uri}}/api/ndac/v2/access-point-sims?access_point_hw_id={{access_point_hw_id}}",
